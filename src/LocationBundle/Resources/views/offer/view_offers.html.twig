{% extends 'base.html.twig' %}
{% use 'templates/menu.html.twig' %}

{% block body %}
	
	<div style="display:flex; justify-content:space-between;">	
		<h4>Liste des offres de location </h4>
		<a class="btn btn-info" href="{{ path('admin_add_offer') }}">Ajouter une offre</a>
	</div>
	<br/>

		<div id="filter"><label>Affiner votre recherche : &nbsp;</label></div>

		<table class="table table-striped" id="offers_table">
			<thead>
				<tr> 
			    	<th class="sort">Marque</th>
			    	<th class="sort">Modèle</th>
			    	<th class="sort">Couleur</th>
			    	<th>Prix de la location</th>
		    		<th>Date de début</th>
		    		<th>Date de fin</th>
		   		 	<th>Edition</th>
		    		<th>Suppression</th>
		    	</tr>
			</thead>
			<tbody>
				{% for o in offers %}
				<tr> 
					<td>{{ o.vehicle.brand }}</td>
					<td>{{ o.vehicle.model }}</td>
					<td>{{ o.vehicle.color }}</td>
					<td>{{ o.priceLocation }}</td>
					<td>{{ o.dateBegin|date('d M Y H:i:s') }}</td>
					<td>{{ o.dateEnd|date('d M Y H:i:s') }}</td>
					<td><a href="{#{ path('edit_offer',  { 'id': o.id } ) }#}">Editer</a></td>
					<td><a href="{#{ path('delete_offer', { 'id': o.id }) }#}">Supprimer</a></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>

{% endblock %}
	
{% block css_offers %}
	<link rel="stylesheet" href="//cdn.datatables.net/1.10.7/css/jquery.dataTables.css" type="text/css" />
{% endblock %}
{% block javascript_offers %}
	<script type="text/javascript" src="//cdn.datatables.net/1.10.13/js/jquery.dataTables.min.js"></script>
	<script>
$(document).ready(function() {
	var table=$('#offers_table').DataTable({
		"lengthMenu": [ [10, 50, 100, -1], [10, 50, 100, "All"] ],
		"pageLength": -1,
		"order": [[ 0, 'asc' ]], // tri sur la premiere colonne (voiture) par ordre croissant
		initComplete: function () {
			this.api().columns(['.sort']).every(function () {
				var column = this;
				var select = $('<select><option value=""></option></select>')
					.appendTo( $('#filter') )
					.on( 'change', function () {
						var val = $.fn.dataTable.util.escapeRegex(
								$(this).val()
								);
						column
							.search( val ? '^'+val+'$' : '', true, false )
							.draw();
					} );
				column.data().unique().sort().each( function ( d, j ) {
					select.append( '<option value="'+d+'">'+d+'</option>' )
				} );
			});
		}
	} );
});
	</script>
{% endblock %}